class Solution {
    public void rotate(int[] arr, int k) {
        int n = arr.length;
        k = k % n;  // Handle k > n case
        
        // For RIGHT rotation:
        // Step 1: Reverse entire array
        reverse(arr, 0, n - 1);
        
        // Step 2: Reverse first k elements  
        reverse(arr, 0, k - 1);
        
        // Step 3: Reverse remaining n-k elements
        reverse(arr, k, n - 1);
    }
    
    private void reverse(int[] arr, int start, int end) {
        while (start < end) {
            int temp = arr[start];
            arr[start] = arr[end];
            arr[end] = temp;
            start++;
            end--;
        }
    }
}
